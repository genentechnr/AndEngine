<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." default="createjar" name="AndEngine">
	<property environment="env" />
	<property name="ECLIPSE_HOME" value="E:/eclipse/galileo-android" />
	<property name="debuglevel" value="source,lines,vars" />
	<property name="target" value="1.6" />
	<property name="source" value="1.6" />
	<property name="bin" value="bin" />
	<property name="src" value="src" />
	
	<property name="binfile" value="bin/andengine.jar" />
	<property name="targetfile_0" value="../AndEngineExamples/lib/andengine.jar" />
	<property name="targetfile_1" value="../AndEngineLiveWallpaper/lib/andengine.jar" />
	<property name="targetfile_2" value="../AndEnginePlayground/lib/andengine.jar" />
	<property name="targetfile_3" value="../HeliTaxiShared/lib/andengine.jar" />
	<property name="targetfile_4" value="../HeliTaxi/lib/andengine.jar" />
	<property name="targetfile_5" value="../HeliTaxiLiveWallpaper/lib/andengine.jar" />
	<property name="targetfile_6" value="../VolcanoLiveWallpaper/lib/andengine.jar" />
	<property name="targetfile_7" value="../CampfireLiveWallpaper/lib/andengine.jar" />
	<property name="targetfile_8" value="../CigaretteLiveWallpaper/lib/andengine.jar" />
	<property name="targetfile_9" value="../LavaLampLiveWallpaper/lib/andengine.jar" />
	<property name="targetfile_10" value="../AndEnginePhysicsBox2D/lib/andengine.jar" />
	<property name="targetfile_11" value="../SuperDroid/lib/andengine.jar" />
	<property name="targetfile_12" value="../HighRise/lib/andengine.jar" />
   
	<target name="createjar" >
		<jar destfile="${binfile}">
			<zipfileset dir="${src}">
				<include name="**/*.*" />
				<exclude name="**/R.java" />
			</zipfileset>
			<zipfileset dir="${bin}">
				<include name="**/*.class" />
				<exclude name="**/R.class" />
				<exclude name="**/R$*.class" />
			</zipfileset>
        </jar>
        
		<copy file="${binfile}" tofile="${targetfile_0}"/>
		<copy file="${binfile}" tofile="${targetfile_1}"/>
		<copy file="${binfile}" tofile="${targetfile_2}"/>
		<copy file="${binfile}" tofile="${targetfile_3}"/>
		<copy file="${binfile}" tofile="${targetfile_4}"/>
		<copy file="${binfile}" tofile="${targetfile_5}"/>
		<copy file="${binfile}" tofile="${targetfile_6}"/>
		<copy file="${binfile}" tofile="${targetfile_7}"/>
		<copy file="${binfile}" tofile="${targetfile_8}"/>
		<copy file="${binfile}" tofile="${targetfile_9}"/>
		<copy file="${binfile}" tofile="${targetfile_10}"/>
		<copy file="${binfile}" tofile="${targetfile_11}"/>
		<copy file="${binfile}" tofile="${targetfile_12}"/>
    </target>
</project>
